# ===========================================
# AGILIZA SIGNATURE API - Environment Variables
# ===========================================

# Debug and Logging
# ==================
# Enable detailed logging for certificate validation and signing processes
DEBUG_SIGNATURE=false
LOG_LEVEL=info

# Certificate Validation
# ======================
# Default hash algorithm for signatures (SHA-256, SHA-384, SHA-512)
DEFAULT_HASH_ALGORITHM=SHA-256

# Timeout for certificate validation operations (milliseconds)
CERTIFICATE_VALIDATION_TIMEOUT=30000

# Enable/disable strict ICP-Brasil validation
STRICT_ICP_VALIDATION=true

# CRL (Certificate Revocation List) Configuration
# ==============================================
# Enable CRL checking for certificate revocation
ENABLE_CRL_CHECK=false

# Cache timeout for CRL data (seconds)
CRL_CACHE_TIMEOUT=3600

# Custom CRL URLs (comma-separated)
# CUSTOM_CRL_URLS=http://custom-crl1.com/crl,http://custom-crl2.com/crl

# File Size Limits
# ================
# Maximum file size for documents (bytes) - default 50MB
MAX_DOCUMENT_SIZE=52428800

# Maximum number of signatures per document
MAX_SIGNATURES_PER_DOCUMENT=100

# Network Configuration
# =====================
# Timeout for network requests (milliseconds)
NETWORK_TIMEOUT=10000

# Proxy configuration (if needed)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080

# Security
# ========
# Enable additional security validations
ENABLE_EXTENDED_VALIDATION=true

# Minimum key size for RSA keys (bits)
MIN_RSA_KEY_SIZE=2048

# Development/Testing
# ===================
# Skip certificate validation in development (NOT for production!)
SKIP_CERT_VALIDATION=false

# Enable test mode with relaxed validation
TEST_MODE=false